<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/core.css">
    <title>Account Types</title>
</head>

<body>
{{> navigation}}
<main>
    <h2>Account Types</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th><a href="/banks">Bank</a></th>
            <th><a href="/clients">Clients</a></th>
            <th>Action</th>
        </tr>

        {{#accountTypeInfo}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>
                    <p title="id = {{bankId}}">{{bankName}}</p>
                </td>
                <td>
                    {{clientsAmount}}
                </td>
                <td>
                    <table class="no-border">
                        <tr>
                            <td>
                                <form hidden name="edit" action="/accountType/save" method="post">
                                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                                    <input type="hidden" name="id" value="{{id}}"/>
                                    <label>Name <input type="text" name="name" value="{{name}}"/></label>
                                    <select class="selectWithSynchronizedId
                                selected={{bankId}}" name="bank.id">
                                    {{#banks}}
                                        <option value={{id}}>
                                            [{{id}}] {{name}}
                                        </option>
                                    {{/banks}}
                                    </select>
                                    <input class="material-icons" type="submit" value="update"
                                           title="update value type"/>
                                </form>
                                <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                                <input class="material-icons unhideForm" type="submit" value="update"
                                       title="update value type"/>
                            </td>
                            <td>
                                <form name="delete" action="/accountType/{{id}}/delete/" method="get">
                                    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
                                    <input class="material-icons" type="submit" value="delete"
                                           title="delete value type"/>
                                </form>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        {{/accountTypeInfo}}
    </table>

    <form hidden name="accountType" action="/accountType/save" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <label>Name <input type="text" name="name"/></label>
        <select name="bank.id">
            {{#banks}}
                <option value={{id}}>
                    [{{id}}] {{name}}
                </option>
            {{/banks}}
        </select>
        <input class="material-icons" type="submit" value="add" title="add value type"/>
    </form>
    <input class="material-icons unhideForm" type="submit" value="add" title="add value type"/>
</main>
<script src="/js/helpers.js"></script>
<script>
    bindUnhideFormButtonsToParentHiddenForm(document.querySelectorAll(".unhideForm"));
    synchronizeSelectId()
</script>
</body>
</html>