<!doctype html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/core.css">
    <title>Clients</title>
</head>

<body>
{{> navigation}}
<main>
<h2>Account Types</h2>
<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th><a href="/banks">Bank</a></th>
        <th><a href="/clients">Clients</a></th>
        <th>Action</th>
    </tr>

    {{#accountTypeInfo}}
        <tr>
            <td>{{accountType.id}}</td>
            <td>{{accountType.name}}</td>
            <td>
                {{#accountType.bank}}
                    {{id}} {{name}}
                {{/accountType.bank}}
            </td>
            <td>
                {{clientsAmount}}
            </td>
            <td>
                <table>
                    <tr>
                        <td>
                            <form name="edit" action="/accountType/edit" method="post">
                                <input type="hidden" name="id" value="{{accountType.id}}"/>
                                <label>Name <input type="text" name="name" value="{{accountType.name}}"/></label>
                                <select class="selectWithSynchronizedId
                                selected={{#accountType.bank}}{{id}}{{/accountType.bank}}" name="bank.id">
                                {{#banks}}
                                    <option value={{id}}>
                                        [{{id}}] {{name}}
                                    </option>
                                {{/banks}}
                                </select>
                                <input type="submit" value="update"/>
                            </form>
                        </td>
                        <td>
                            <form name="delete" action="/accountType/{{accountType.id}}/delete/" method="get">
                                <input type="submit" value="delete"/>
                            </form>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    {{/accountTypeInfo}}
</table>

<form name="accountType" action="/accountType/add" method="post">
    <label>Name <input type="text" name="name"/></label>
    <select name="bank.id">
        {{#banks}}
            <option value={{id}}>
                [{{id}}] {{name}}
            </option>
        {{/banks}}
    </select>
    <input type="submit" value="add"/>
</form>
</main>

<script src="js/helpers.js"></script>
<script>synchronizeSelectId()</script>
</body>
</html>